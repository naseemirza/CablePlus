<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:clickable="true"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:clickable="true"
        android:elevation="1dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        card_view:cardElevation="1dp">

        <RelativeLayout
            android:id="@+id/re1"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/limain"
                android:clickable="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/compid"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginBottom="5dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/splsh" />


            </LinearLayout>

                <LinearLayout
                    android:id="@+id/prdetails"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/prodname"
                        android:text="Product Name"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp"
                        android:textSize="13sp"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:id="@+id/stock"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/prodstock"
                            android:text="SKU : "
                            android:textSize="13sp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/prodstock1"
                            android:text="0001"
                            android:textSize="13sp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/spinnerPgqlt1"
                        android:layout_width="wrap_content"
                        android:clickable="false"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinnerSpool"
                            android:dropDownWidth="fill_parent"
                            android:layout_width="match_parent"
                            android:paddingRight="8dp"
                            android:layout_height="match_parent"
                            android:gravity="start" />

                        <!--<ImageView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_weight="1"-->
                            <!--android:layout_marginEnd="30dp"-->
                            <!--android:clickable="false"-->
                            <!--android:src="@drawable/ic_arrow_drop_down_black_24dp" />-->

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/qnty"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/prodqnty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Quantity"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textSize="13sp" />

                        <ImageButton
                            android:id="@+id/remov"
                            android:onClick="decreaseInteger"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_remove_black_24dp" />

                        <TextView
                            android:id="@+id/editqnty"
                            android:layout_width="35dp"
                            android:layout_height="23dp"
                            android:textSize="12sp"
                            android:text="1"
                            android:layout_marginStart="-4dp"
                            android:layout_marginEnd="-4dp"
                            android:ellipsize="end"
                            android:cursorVisible="false"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/editextborder"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textCursorDrawable="@color/darkgray" />

                        <ImageButton
                            android:id="@+id/add"
                            android:onClick="increaseInteger"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_add_black_24dp" />

                </LinearLayout>

                    <Button
                        android:id="@+id/Addtocart"
                        android:textColor="@color/colorWhite"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/cardbuttonview"
                        android:text="Add To Cart"
                        android:textSize="13sp"
                        android:textAllCaps="false" />

                </LinearLayout>



            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
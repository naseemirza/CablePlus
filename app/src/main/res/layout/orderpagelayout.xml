<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:clickable="true"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/re1"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/limain"
                android:clickable="true"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:gravity="start"
                    android:background="@drawable/linborder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/compid"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginBottom="5dp"
                        android:paddingEnd="10dp"

                        android:paddingStart="10dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/splsh" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/linborder"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/prodname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:text="Product Name"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:textSize="13sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/linborder"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/remov"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:onClick="decreaseInteger"
                        android:src="@drawable/ic_remove_black_24dp" />

                    <TextView
                        android:id="@+id/editqnty"
                        android:layout_width="35dp"
                        android:layout_height="23dp"
                        android:layout_marginEnd="-4dp"
                        android:layout_marginStart="-4dp"
                        android:background="@drawable/editextborder"
                        android:cursorVisible="false"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:text="1"
                        android:textAlignment="center"
                        android:textCursorDrawable="@color/darkgray"
                        android:textSize="12sp" />

                    <ImageButton
                        android:id="@+id/add"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:onClick="increaseInteger"
                        android:src="@drawable/ic_add_black_24dp" />

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>